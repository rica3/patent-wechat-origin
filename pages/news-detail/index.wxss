.detail-container {
  padding: 32rpx;
  background: #fff;
  min-height: 100vh;
}

.detail-header {
  margin-bottom: 32rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.detail-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.detail-source,
.detail-date {
  margin-left: 16rpx;
}

.detail-content {
  color: #666;
}

.detail-summary {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.detail-body {
  font-size: 28rpx;
  line-height: 1.8;
} 