.news-container {
  background: #f7f8fa;
  min-height: 100vh;
}

.news-list {
  padding: 16rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.news-item {
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.news-card {
  padding: 24rpx !important;
}

.news-tag {
  margin-right: 16rpx;
}

.news-footer {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
}

.news-source {
  margin-right: 16rpx;
}

.news-date {
  color: #666;
} 